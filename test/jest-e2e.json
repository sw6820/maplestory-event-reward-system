{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../apps/$1"
  },
  "testMatch": ["**/test/e2e/**/*.e2e-spec.ts"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testTimeout": 30000
} 