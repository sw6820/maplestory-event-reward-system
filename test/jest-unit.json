{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../apps/$1"
  },
  "testMatch": ["**/test/unit/**/*.spec.ts"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
} 